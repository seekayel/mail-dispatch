<p id="notice"><%= notice %></p>

<h1>Email Messages</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Cc</th>
      <th>Subject</th>
      <th>Raw</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_messages.each do |email_message| %>
      <tr>
        <td><%= email_message.from %></td>
        <td><%= email_message.to %></td>
        <td><%= email_message.cc %></td>
        <td><%= email_message.subject %></td>
        <td><%= email_message.raw %></td>
        <td><%= link_to 'Show', email_message %></td>
        <td><%= link_to 'Edit', edit_email_message_path(email_message) %></td>
        <td><%= link_to 'Destroy', email_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email Message', new_email_message_path %>
